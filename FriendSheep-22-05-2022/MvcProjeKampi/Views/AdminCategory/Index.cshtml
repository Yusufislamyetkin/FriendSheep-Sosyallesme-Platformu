@using EntityLayer.Concrete
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <section class="content-header">
        <div>   </div>
    </section>


    <div>

        <table class="table table-bordered">

            <tr>
                <th>
                    Kategori ID
                </th>
                <th> Kategori AD</th>
                <th>
                    Kategori Açıklama
                </th>
                <th>
                    Sil
                </th>
                <th>
                    Güncelle
                </th>
                <th>
                    Başlıklar
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @item.CategoryID
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.CategoryDescription
                    </td>
                    <td>
                        <a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger form-control"> Sil </a>
                    </td>
                    <td>
                        <a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-warning form-control"> Güncelle </a>
                    </td>
                    <td>
                        <a href="#" class="btn btn-dark form-control "> Başlıklar </a>
                    </td>
                </tr>

            }

        </table>

        <br />

        <a href="/AdminCategory/AddCategoty" class="btn btn-primary"> Yeni Kategori Ekle </a>




    </div>
</body>
</html>
