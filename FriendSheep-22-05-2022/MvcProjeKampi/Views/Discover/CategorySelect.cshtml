<!DOCTYPE html>
<html>
<head>
    <title>Rotating CSS Cards by Creative Tim </title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <link href='~/Extra/rotating-css-card-master/css/bootstrap.css' rel='stylesheet' />

    <link href="~/Extra/rotating-css-card-master/css/pe-icon-7-stroke.css" rel="stylesheet" />

    <!--     <link href='css/ct-navbar.css' rel='stylesheet' /> -->
    <link href='~/Extra/rotating-css-card-master/css/rotating-card.css' rel='stylesheet' />

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />

    <link href="https://netdna.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">

    <script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>
    <style>
        body {
            margin-top: 100px;
        }

        .navbar-default .navbar-nav > li > a {
            padding: 15px 15px;
            margin: 5px 0;
        }

        .navbar-default {
            padding: 10px 0;
            background-color: rgba(255, 255, 255, 0.95);
            border-color: transparent;
            box-shadow: 0 0px 13px rgba(0,0,0,.2);
        }

        .btn-info,
        .btn-info:hover,
        .btn-info:focus {
            color: #FFF !important;
            background-color: #00bbff !important;
            border-color: #00bbff !important;
        }

        .btn-info {
            opacity: .8;
            transition: all 0.1s;
            -webkit-transition: all 0.1s;
        }

            .btn-info:hover,
            .btn-info:focus {
                opacity: 1;
            }
    </style>
</head>
<div class="container">

  @foreach (var item in Model)
  {


    <div class="col-md-4 col-sm-6">
        <div class="card-container">
            <div class="card">
                <div class="front">
                    <div class="cover">
                        <img src="@item.Categoryimages" />
                    </div>
                    <div class="user">
                        <img class="img-circle" src="images/rotating_card_profile3.png" />
                    </div>
                    <div class="content">
                        <div class="main">
                            <h3 class="name">@item.CategoryName</h3>
                            <br />
                            <p class="text-center">@item.CategoryDescription</p>
                        </div>
                      
                    </div>
                </div> <!-- end front panel -->
                <div class="back">
                    <div class="header">
                        <h5 class="motto" >"FriendSheep ile dostluklar edinin"</h5>
                    </div>
                    <div class="content">
                        <div class="main">
                            <h4 class="text-center">@item.CategoryName</h4>
                            <p class="text-center">Arkadaş edinmenin tek yolu, arkadaş olmaktır!</p>

                          
                            <br />
                            <br />
                                <div >
                                    <div class="social-links text-center">
                                        <a href="/Discover/CategorySelectList/@item.CategoryID" class="btn btn-outline-warning" style="color:black;font-weight:bold"><i class="fa fa-eye "></i> Hadi Göz Atalım</a>
                                        <br />
                                    </div>
                                </div>
                             
                          

                        </div>
                    </div>
                    <!--<div class="footer" style="background-color:blueviolet">-->
                        @*<div class="social-links text-center">
                            <a href="/Discover/CategorySelectList/@item.CategoryID" class="btn btn-outline-warning" style="color:black;font-weight:bold"><i class="fa fa-eye "></i> Hadi Göz Atalım</a>
                            <br />
                        </div>*@

                        <!--<div style="background-color:blueviolet">   </div>

                      

                    </div>-->
                   
                </div> <!-- end back panel -->
                <br />
            </div> <!-- end card -->
        </div> <!-- end card-container -->
    </div>


  }



</div>


