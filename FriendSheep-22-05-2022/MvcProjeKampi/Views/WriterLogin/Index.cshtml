
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Kullanıcı Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/Extra/login-form-20/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/Extra/login-form-20/images/bg2.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h1 class="heading-section font-weight-bolder ">Friends Sheep </h1>
                </div>

            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                       <br />
                        @using (Html.BeginForm("Index", "WriterLogin", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input name="WriterEmail" type="text" class="form-control" placeholder="Kullanıcı Mail" required>
                            </div>
                            <div class="form-group">
                                <input name="WriterPassword" id="password-field" type="password" class="form-control" placeholder="Şifre" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-default submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-wrap">
                                        Beni Hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Şifremi Unuttum</a>
                                </div>
                            </div>
                        }
                    
                      
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/Extra/login-form-20/js/jquery.min.js"></script>
    <script src="/Extra/login-form-20/js/popper.js"></script>
    <script src="/Extra/login-form-20/js/bootstrap.min.js"></script>
    <script src="/Extra/login-form-20/js/main.js"></script>

</body>
</html>

