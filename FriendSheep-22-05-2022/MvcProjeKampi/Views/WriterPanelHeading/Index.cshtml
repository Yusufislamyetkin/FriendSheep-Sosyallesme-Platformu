                            }

                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>


                                <td>
                                    @item.HeadingName
                                </td>
                                <td>
                                    <ul class="list-inline text-left">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage" />
                                        </li>
                                    </ul>
                                    <p class="font-weight-bold text-left"> @item.Writer.WriterName</p>
                                </td>
                                <td>
                                    @item.HeadingDate
                                </td>
                                <td>
                                    <span class="@color"> @item.Category.CategoryName </span>
                                </td>
                                <td>
                                <td class="project-actions text-center">

                                    <a class="btn btn-outline-success" href="#">
                                        <i class="fas fa-check">
                                        </i>
                                        Aktif Olması Bekleniyor
                                    </a>

                                </td>


                            </tr>

                        }



                    </tbody>
                </table>





            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>


    <!-- Control Sidebar -->
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Mvc Proje Kampı Tema/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Mvc Proje Kampı Tema/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Mvc Proje Kampı Tema/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Mvc Proje Kampı Tema/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
